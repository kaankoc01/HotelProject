@model List<HotelProject.EntityLayer.Concrete.Appuser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1>Kullanıcı Listesi</h1>

@model List<ResultAppUserListDto>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}



<div class="col-lg-12">
    <div class="active-member">
        <div class="table-responsive">
            <table class="table table-xs mb-0">
                <thead>
                    <tr>
                        <th>Kullanıcı</th>
                        <th>Rol Ata</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><img src="@item.ImageUrl" class=" rounded-circle mr-3" alt="">@item.Name @item.Surname</td>
                            <td><a href="/RoleAssign/AssignRole/@item.Id" class="btn btn-warning">R</a></td>
                            


                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


<br />
<a href="/Register/Index/" class="btn btn-primary">Yeni Kullanıcı Oluştur</a>


